# Marketing Agency Script Hub - API Configuration
# Copy this file to .env and fill in your actual API keys

# === AI ASSISTANT APIs ===
# Claude API (Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API (ChatGPT)
OPENAI_API_KEY=your_openai_api_key_here

# Perplexity API
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# === SEO & MARKETING DATA APIs ===
# DataForSEO - Comprehensive SEO data and analytics
DATAFORSEO_LOGIN=your_dataforseo_login_here
DATAFORSEO_PASSWORD=your_dataforseo_password_here

# Keywords Everywhere - Keyword research and volume data
KEYWORDS_EVERYWHERE_API_KEY=your_keywords_everywhere_api_key_here

# === OPTIONAL APIs (for advanced features) ===
# Google Analytics (for traffic analysis)
# GOOGLE_ANALYTICS_CREDENTIALS_JSON=path/to/credentials.json

# Google Search Console (for search data)
# GOOGLE_SEARCH_CONSOLE_CREDENTIALS_JSON=path/to/credentials.json

# Ahrefs API (for backlink analysis)
# AHREFS_API_KEY=your_ahrefs_api_key_here

# === CONFIGURATION ===
# Default AI provider for analysis (anthropic, openai, perplexity)
DEFAULT_AI_PROVIDER=anthropic

# Enable caching to reduce API calls (true/false)
ENABLE_CACHING=true

# Cache duration in hours
CACHE_DURATION=24

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=3

# === DEVELOPMENT SETTINGS ===
# Set to true for detailed API response logging
DEBUG_API_CALLS=false

# Set to true to use mock data instead of real APIs (for testing)
USE_MOCK_DATA=false